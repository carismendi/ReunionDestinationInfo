---
import { Image } from "astro:assets";
import family from "@/assets/724a6c3fb39ea64136b99b422d28aecf.png";
import castle from "@/assets/d987df88206f2e928e31b6518b0e4092.png";
import lines from "@/assets/lines.gif";
import title from "@/assets/title.png";
---

<section class="bg-white">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row items-center gap-12">
      <div class="md:w-1/2">
        <div class="parent">
          <Image src={castle} alt="" class="image1" width={695} height={800} />
          <Image src={family} alt="" class="image2" width={795} height={800} />
          <Image src={lines} alt="" class="gif" width={317} height={59} />
        </div>
      </div>
      <div class="md:w-1/2 py-5 md:py-20">
        <div class="text-center">
          <h3
            class="text-2xl md:text-5xl font-bold mb-6 first"
          >
            Vive una experiencia
          </h3>
          <Image src={title} alt="" class="mb-5" width={807} height={254} />
         
          <h3 class="text-2xl md:text-4xl">
            Disfruta de <b>5 días / 4 noches.</b>
          </h3>
          <h3 class="text-2xl md:text-4xl">
            En <b>Reunion Resort</b>, un paraíso tropical
          </h3>
          <h3 class="text-2xl md:text-4xl">con <b>12 piscinas</b> con</h3>
          <h3 class="text-2xl md:text-4xl">agua temperada y jacuzzi.</h3>
          <h3p class="text-2xl md:text-4xl mt-5 OYPEnA">
            A 15 min de los parques de Disney
          </h3>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .first {
    font-weight: 700;
    font-style: normal;
    color: rgb(0, 0, 0);
    font-kerning: none;
    text-decoration: none;
  }
  .OYPEnA {
    font-weight: 700;
    font-style: normal;
    color: rgb(192, 158, 102);
    font-kerning: none;
    text-decoration: none;
  }

  .parent {
    position: relative;
    top: 0;
    left: 0;
    
  }
  .image1 {
    position: relative;
    top: 0;
    left: 0;
  }
  .image2 {
    position: absolute;
    bottom: 0px;
    left: 30px;
  }
  .gif {
    position: absolute;
    bottom: 40px;
    left: 5px;
    transform: rotate(210deg);
  }
  @media only screen and (max-width: 1366px) {
    .gif{
      width: 200px;
    }
  }
</style>
